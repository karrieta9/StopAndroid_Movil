<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleTextColor="@color/colorWhiteApp"
    android:background="@color/colorPrimary"
    android:theme="@style/AppThemeCustomToolbar"
    app:popupTheme="@style/AppThemeCustomMenuToolbar">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_oponente1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/cuc" />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:id="@+id/toolbar_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtUserName"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/toolbar_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtLevelUser"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

    </LinearLayout>





</androidx.appcompat.widget.Toolbar>